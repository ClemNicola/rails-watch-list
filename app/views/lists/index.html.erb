<div class="container">
  <div class="composants">
    <h3>My lists</h3>
    <%= link_to "New list", new_list_path %>
  </div>
  <div class="parent">
    <% @lists.each do |list| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=list.photo.attached? ? cl_image_tag(list.photo.key) :asset_path('back_ground.jpg')%>)">
        <%= link_to "#{list.name}", list_path(list)%>
        <div class="delete-card">
          <%= link_to "Delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        </div>
      </div>
    <% end %>
  </div>
</div>
